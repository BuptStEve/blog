#footer
  width 96%
  margin 0 auto
  overflow hidden
  padding 0 2% 0.5em
  position relative
  background color-footer
  .line
    width 100%
    height 14em
    margin 0 auto
    @media mini
      width 10em
      float left
      position relative
    span
      display block
      width 0.5em
      height 6.25em
      border-right 0.125em solid color-white
      margin 0 auto
      @media mini
        position absolute
        left 3em
        margin 0 0 1.5em

.author
  width w=(110/16)em
  height w
  margin 0 auto
  background no-repeat url("../"+author-img) left top 
  background-size w w
  border-radius (w/2)
  transition transform 2s ease-out
  &:hover
    transform rotateZ(360deg)
  @media mini
    position: absolute;
    top 6em
    margin 0 0 1.5em

.info
  font-family font-default
  font-size font-size+30
  line-height 1.3em
  width 90%
  margin 0 auto
  color color-white
  @media mini
    margin 4.5em 0 2em 0
    float left
    width 75%

.social-font
  width 100%
  margin 0 auto
  float left
  padding-left 3%
  @media phone
    padding-left 20%
  @media mini
    width 18em 
    position absolute  
    right -3em
    top 3em
  a
    float left
    display block
    width 14%
    color color-white
    font-size font-size+80
    padding 0.5em
    @media tablet
      padding 0.3em
    &:hover:before
      color color-blue
    &[title="weibo"]::before,&[title="twitter"]::before,&[title="github"]::before,&[title="facebook"]::before,&[title="linkedin"]::before
      font-family font-icon
      font-smoothing()
    &[title="weibo"]::before
      content "\f18a"
    &[title="twitter"]::before
      content "\f099"
    &[title="github"]::before
      content "\f09b"
    &[title="facebook"]::before
      content "\f09a"
    &[title="linkedin"]::before
      content "\f08c"
	.icon-email:before
	  font-family font-icon
	  font-smoothing()
	  content: "\f003"
 
.copyright
  font-family font-default
  font-size 0.8em
  width 100%
  color color-white
  text-align center
  @media mini
    float left
  a
    color color-white
    &:hover
      color color-blue
	  
font-smoothing()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
