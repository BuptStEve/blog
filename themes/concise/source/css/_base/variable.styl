// Color
color-background = #eee
color-font = black
color-meta = #777
color-border = #ddd
color-link = rgb(0, 133, 255)
color-section = #fafafa
color-theme = #2CA6CB
color-white = #ffffff
color-font-nav =#E9CD4C
color-footer = #1f1f1f
color-blue = #2ca6cb
color-gray = #CCC

//Media
width-phone = 568px
width-mini = 768px
width-tablet = 1024px
width-desktop = 1560px
phone = "only screen and (min-width: " + width-phone + ")"
mini= "only screen and (min-width: " + width-mini + ")"
tablet = "only screen and (min-width: " + width-tablet + ")"
desktop = "only screen and (min-width: " + width-desktop + ")"

// Font
font-size = 100%
line-height = 1.5
font-default = Georgia, 'Times New Roman', Times,'Songti SC', SimSun, "Microsoft YaHei" , serif
font-serif = Georgia,"Times New Roman",Times,"Songti SC","SimSun",serif
font-mono = Monaco, Menlo, Consolas, Courier New, monospace
font-title = Helvetica Neue, Helvetica, Arial, "Hiragino Sans GB", sans-serif
font-quote = Georgia, 'Times New Roman', Times, STFangsong, KaiTi, serif

@import url("//fonts.useso.com/css?family=Lato:400,400italic")
font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'

font-icon-diao = "fontdiao"
font-icon-diao-path = 'font/fontdiao'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

//image
author-img = hexo-config("author_img")

// Width
page-width = 94%
